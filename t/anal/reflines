for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME="reflines offset"
FILE=malloc://1023
CMDS='e asm.bits=32
e asm.cpu=x86
e anal.cpu=x86
e scr.utf8=true
e scr.color=false
wx 
aa > /dev/null
pd 38
'
EXPECT='╒ (fcn) fcn.00000000 1023
│           0x00000000    31c0         xor eax, eax
│           0x00000002    39d6         cmp esi, edx
