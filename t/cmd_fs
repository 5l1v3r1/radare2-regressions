#!/bin/sh
# GPL 3+ - Copyright (C) 2017 - pancake
[ -e tests.sh ] && . ./tests.sh || . ../tests.sh

NAME='m ext2 auto'
FILE=../bins/fs/ext2.img
CMDS='m
'
EXPECT='ext2	0x0	/root
'
run_test

NAME='m hfs auto'
FILE=../bins/fs/hfs.img
CMDS='m
'
EXPECT='hfs	0x0	/root
'
run_test

NAME='m fat auto'
FILE=../bins/fs/fat.img
CMDS='m
'
EXPECT='fat	0x0	/root
'
run_test

NAME='md ext2 auto'
FILE=../bins/fs/ext2.img
ARGS=-n
CMDS='m /root
md /root~?
'
EXPECT='6
'
run_test

NAME='md ext2'
FILE=../bins/fs/ext2.img
ARGS=-n
CMDS='m /root ext2
md /root
'
EXPECT='d .
d ..
d lost+found
d bin
d etc
f README.md
'
run_test

NAME='md ext2 cat file'
FILE=../bins/fs/ext2.img
ARGS=-n
CMDS='m /root ext2
mg /root/README.md
'
EXPECT='This is an EXT2 partition

'
run_test

NAME='md vfat'
FILE=../bins/fs/fat.img
ARGS=-n
CMDS='m /root fat
md /root
'
EXPECT='d etc
d bin
f README.md
'
run_test

NAME='md fat cat file'
FILE=../bins/fs/fat.img
ARGS=-n
CMDS='m /root fat
mg /root/README.md
'
EXPECT='This is a FAT partition

'
run_test

NAME='md hfs'
FILE=../bins/fs/hfs.img
ARGS=-n
CMDS='m /root hfs
md /root
'
EXPECT='d bin
d etc
f README.md
'
run_test

NAME='md hfs cat file'
FILE=../bins/fs/hfs.img
ARGS=-n
CMDS='m /root hfs
mg /root/README.md
'
EXPECT='This is an HFS partition

'
run_test

