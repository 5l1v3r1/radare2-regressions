#!/bin/sh
# GPL 3+ - Copyright (C) 2012  jvoisin

[ -e tests.sh ] && . ./tests.sh || . ../tests.sh

NAME='Import project'
FILE=malloc://512
ARGS=
CMDS="e dir.projects = ../files/
Po project.r2
C*"
EXPECT='"CCu Some test" @ 0x00404890
'
run_test

NAME='Import project with overwriting'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = ../files/
CC "Some other test" @ 0x00404890
Po project.r2
C*
'
EXPECT='"CCu Some test" @ 0x00404890
'
run_test

NAME='Export project'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = /tmp/
CC "Some other test" @ 0x00404890
Ps project.r2
cat /tmp/project.r2|grep Some
rm /tmp/project.r2
'
EXPECT='"CCu "Some other test"" @ 0x00404890
'
run_test

NAME='Set, export, unset and import'
FILE=malloc://512
ARGS=
CMDS='e dir.projects = /tmp/
CC "First comment" @ 0x00404890
CC "Second comment" @ 0x00404800
Ps project.r2
C- @ 0x00404890
C- @ 0x00404800
Po project.r2
cat /tmp/project.r2|grep comment
rm /tmp/project.r2
'
EXPECT='"e asm.comments = true"
"CCu "First comment"" @ 0x00404890
"CCu "Second comment"" @ 0x00404800
'
run_test
