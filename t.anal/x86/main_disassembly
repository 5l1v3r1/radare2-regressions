#!/bin/sh
for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

NAME='Main in disassembly'
BROKEN=
FILE=../../bins/elf/analysis/ls2
ARGS=
CMDS='
aa
pi 1 @ 0x0040488d
'
EXPECT='mov rdi, main
'
run_test

NAME='Main in disassembly with ujump hack'
BROKEN=
FILE=../../bins/elf/analysis/ls_main_bug
ARGS=
CMDS='e anal.pltujmp = false
aa
afi @ main ~offset
'
EXPECT='offset: 0x000038b0
'
run_test

NAME='Main in disassembly without ujump hack'
BROKEN=1
FILE=../../bins/elf/analysis/ls_main_bug
ARGS=
CMDS='e anal.pltujmp = true
aa
afi @ main ~offset
'
EXPECT='offset: 0x000038b0
'
run_test
