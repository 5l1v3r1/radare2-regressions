#!/bin/bash

for a in . .. ../.. ; do [ -e $a/tests.sh ] && . $a/tests.sh ; done

PLUGIN="arm.cs"

NAME="$PLUGIN: ldr code analysis"
BROKEN=1
FILE=malloc://32
CMDS='
wx 20c09fe5
wx 0cc09ae7 @ 4
e asm.arch='$PLUGIN'
e asm.bits=32
# pd 2 - note different colors
pi 2
ao~type[2]
ao@4~type[2]
'
EXPECT='ldr ip, [pc, 0x20] ; 0x00000028
ldr ip, [sl, ip]
(load)
(load)
'
run_test

NAME="$PLUGIN: endian"
BROKEN=
FILE=malloc://32
CMDS='
e asm.arch='$PLUGIN'
e asm.bits=32
wx e59a9ae7
e cfg.bigendian=false
pi 1@0
e cfg.bigendian=true
pi 1@0
'
EXPECT='ldr sb, [sl, r5, ror 21]
ldr sb, [sl, 0xae7]
'
run_test
